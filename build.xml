  <target name="gui"
          description="Compila las intefaces de usuario en Java">
    <javac srcdir="." sourcepath="" includes="gui/*.java"
           includeAntRuntime="false"/>

    <java taskname="kawa"
          classname="kawa.repl"
          failOnError="true"
          fork="true">
      <classpath>
        <pathelement location="/usr/local/share/java/kawa-1.13.jar"/>
        <pathelement path="."/>
      </classpath>
      <arg line="-C 'gui/MyApp.scm'"/>
    </java>
  </target>

  <target name="clean"
          description="Limpia los archivos binarios">
    <delete verbose="true">
      <fileset dir="." includes="*.jar **/*.class"/>
    </delete>
  </target>

